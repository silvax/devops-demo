{
  "variables": {
    "sourceami"           : "ami-0268d56a",
    "role"                : "base",
    "virtualization_type" : "hvm",
    "instance_type"       : "m3.medium",
    "source_repo"         : "{{ env `GIT_URL` }}",
    "source_commit_hash"  : "{{ env `GIT_COMMIT` }}",
    "build"               : "{{ env `JOB_NAME` }}",
    "build_number"        : "{{ env `BUILD_NUMBER` }}",
    "build_url"           : "{{ env `BUILD_URL` }}"
  },
  "builders": [{
    "type"            : "amazon-instance",
    "region"          : "us-east-1",
    "s3_bucket"       : "inin-custom-amis",
    "bundle_prefix"   : "inin-{{user `role`}}-{{timestamp}}",
    "account_id"      : "490606849374",
    "source_ami"      : "{{user `sourceami`}}",
    "instance_type"   : "{{user `instance_type`}}",
    "iam_instance_profile": "default",
    "ssh_username"    : "ec2-user",
    "ssh_timeout"     : "5m",
    "ami_name"        : "{{user `role`}}-{{user `virtualization_type`}}-instance-store {{isotime | clean_ami_name}}",
    "x509_cert_path"  : "certs/devops-dev.crt",
    "x509_key_path"   : "certs/devops-dev.key",
    "run_tags"        : { "Name" : "{{user `role`}}_packer_instance_store" },
    "tags": {
      "Name"               : "base-packer",
      "role"               : "{{ user `role` }}",
      "owner"              : "devops-cloudapplications@inin.com",
      "type"               : "ebs",
      "sourceami"          : "{{ user `sourceami` }}",
      "source_repo"        : "{{ user `source_repo` }}",
      "source_commit_hash" : "{{ user `source_commit_hash` }}",
      "build"              : "{{ user `build` }}",
      "build_number"       : "{{ user `build_number` }}",
      "build_url"          : "{{ user `build_url` }}"
    },
    "ami_virtualization_type" : "{{user `virtualization_type`}}",
    "enhanced_networking"     : true,
    "vpc_id": "vpc-ba514bd8",
    "subnet_id": "subnet-21e7b967",
    "security_group_id": "sg-cf66d3aa",
    "ssh_private_ip": true,
    "associate_public_ip_address": true
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./base",
      "destination": "/home/ec2-user"
    },
    {
      "type": "shell",
      "script": "packer.sh"
    },
    {
        "type": "ansible-local",
        "playbook_file": "base/build.yml",
        "playbook_dir": "base"
    }
  ]
}
