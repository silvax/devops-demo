{
  "variables": {
    "sourceami"           : "ami-1ecae776",
    "role"                : "base",
    "instance_type"       : "m3.medium",
    "source_repo"         : "{{ env `GIT_URL` }}",
    "source_commit_hash"  : "{{ env `GIT_COMMIT` }}",
    "build"               : "{{ env `JOB_NAME` }}",
    "build_number"        : "{{ env `BUILD_NUMBER` }}",
    "build_url"           : "{{ env `BUILD_URL` }}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "{{user `sourceami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name" : "{{user `role`}}-ebs {{isotime | clean_ami_name}}",
    "ssh_timeout": "5m",
    "iam_instance_profile": "default",
    "enhanced_networking": true,
    "vpc_id": "vpc-ba514bd8",
    "subnet_id": "subnet-21e7b967",
    "security_group_id": "sg-cf66d3aa",
    "ssh_private_ip": true,
    "associate_public_ip_address": true,
    "run_tags": {
      "Name"               : "{{ user `role` }}-packer",
      "role"               : "{{ user `role` }}-packer"
    },
    "tags": {
      "Name"               : "{{ user `role` }}",
      "role"               : "{{ user `role` }}",
      "owner"              : "devops-cloudapplications@inin.com",
      "source_ami"         : "{{ user `sourceami` }}",
      "source_repo"        : "{{ user `source_repo` }}",
      "source_commit_hash" : "{{ user `source_commit_hash` }}",
      "build"              : "{{ user `build` }}",
      "build_number"       : "{{ user `build_number` }}",
      "build_url"          : "{{ user `build_url` }}"
    },
    "run_tags": {
      "Name": "base-packer",
      "role": "base-packer",
      "builder": "base-packer"
    },
    "ami_block_device_mappings": [
      {
          "device_name": "/dev/sdo",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-86ece438",
          "delete_on_termination": true,
          "encrypted": true
      },
      {
          "device_name": "/dev/sdp",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-a3e2ea1d",
          "delete_on_termination": true,
          "encrypted": true
      }
    ]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./base",
      "destination": "/home/ec2-user"
    },
    {
      "type": "shell",
      "script": "packer.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "base/build.yml",
      "playbook_dir": "base"
    }
  ]

}
