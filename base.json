{
  "variables": {
    "sourceami": "ami-08842d60",
    "role"                : "base",
    "instance_type"       : "m3.medium",
    "source_repo"         : "ansible-base",
    "source_commit_hash"  : "not set",
    "build"               : "not set"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "{{user `sourceami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name" : "{{user `role`}}-instance-store {{isotime | clean_ami_name}}",
    "ssh_timeout": "5m",
    "iam_instance_profile": "default",
    "enhanced_networking": true,
    "vpc_id": "vpc-ba514bd8",
    "subnet_id": "subnet-21e7b967",
    "security_group_id": "sg-cf66d3aa",
    "ssh_private_ip": true,
    "associate_public_ip_address": true,
    "tags": {
      "Name"               : "base-packer",
      "role"               : "{{ user `role` }}",
      "type"               : "instance-store",
      "sourceami"          : "{{ user `sourceami` }}",
      "source_repo"        : "{{ user `source_repo` }}",
      "source_commit_hash" : "{{ user `source_commit_hash` }}",
      "build"              : "{{ user `build` }}",
      "build_time"         : "{{ isotime }}"
    },
    "ami_block_device_mappings": [
      {
          "device_name": "/dev/sdo",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-86ece438",
          "delete_on_termination": true
      },
      {
          "device_name": "/dev/sdp",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-a3e2ea1d",
          "delete_on_termination": true
      }
    ]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./base",
      "destination": "/home/ec2-user"
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum install python-pip -y",
        "sudo pip install ansible==1.7.1",
        "sudo mkdir -p /etc/ansible",
        "sudo chown ec2-user:ec2-user /etc/ansible",
        "sudo mv /home/ec2-user/base/ansible.cfg /etc/ansible/ansible.cfg",
        "sudo chown ec2-user:ec2-user /etc/ansible/ansible.cfg",
        "sudo touch /home/ec2-user/ansible.log",
        "sudo chown ec2-user:ec2-user /home/ec2-user/ansible.log",
        "sudo chmod 666 /home/ec2-user/ansible.log",
        "echo 'source_repo: {{user `source_repo`}}' >> /home/ec2-user/ami_info.txt",
        "echo 'commit_hash: {{user `source_commit_hash`}}' >> /home/ec2-user/ami_info.txt",
        "echo 'build: {{user `build`}}' >> /home/ec2-user/ami_info.txt"
    ]},
    {
      "type": "ansible-local",
      "playbook_file": "base/build.yml",
      "playbook_dir": "base"

    }
  ]

}
