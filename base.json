{
  "variables": {
    "sourceami": "ami-08842d60"

  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "{{user `sourceami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ec2-user",
    "ami_name": "devops-base-amazon-linux-ebs {{isotime | clean_ami_name}}",
    "ssh_timeout": "5m",
    "iam_instance_profile": "default",
    "enhanced_networking": true,
    "vpc_id": "vpc-ba514bd8",
    "subnet_id": "subnet-21e7b967",
    "security_group_id": "sg-cf66d3aa",
    "ssh_private_ip": true,
    "associate_public_ip_address": true,
    "tags": {
      "Name": "base-packer",
      "role": "base-packer"
    },
    "ami_block_device_mappings": [
      {
          "device_name": "/dev/sdo",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-86ece438",
          "delete_on_termination": true
      },
      {
          "device_name": "/dev/sdp",
          "volume_type": "standard",
          "volume_size":  10,
          "snapshot_id": "snap-a3e2ea1d",
          "delete_on_termination": true
      }
    ]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./base",
      "destination": "/home/ec2-user"
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum install python-pip -y",
        "sudo pip install ansible",
        "sudo mkdir -p /etc/ansible",
        "sudo mv /home/ec2-user/base/ansible.cfg /etc/ansible/ansible.cfg",
        "sudo touch /var/log/ansible.log",
        "sudo chown ec2-user:ec2-user /var/log/ansible.log",
        "sudo chmod 666 /var/log/ansible.log"
    ]},
    {
      "type": "ansible-local",
      "playbook_file": "base/build.yml",
      "playbook_dir": "base"

    }
  ]

}
